<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Background Gradient: Deep to Light Blue -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:type="linear"
          android:angle="90"
          android:startColor="#002F6C"
          android:endColor="#00A0E9"/><!-- Lighter tropical blue -->
    </shape>
  </item>

  <!-- Subtle Wave Pattern 1 -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@android:color/transparent"/>
      <stroke android:width="3dp" android:color="#0087C1"/>
      <corners android:radius="30dp"/>
    </shape>
  </item>

  <!-- Subtle Wave Pattern 2 (Smoother) -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@android:color/transparent"/>
      <stroke android:width="2dp" android:color="#0072A3"/>
      <corners android:radius="40dp"/>
    </shape>
  </item>

</layer-list>
