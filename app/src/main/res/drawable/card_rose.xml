<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Background Gradient: Soft Rose Pink to Pastel White -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:type="linear"
          android:angle="90"
          android:startColor="#FFC1CC"
          android:endColor="#FFF5F7"/> <!-- Light Pastel White -->
    </shape>
  </item>

  <!-- Abstract Floral Curve (Accent 1) -->
  <item android:top="30dp">
    <shape android:shape="rectangle">
      <solid android:color="#FF85A2"/> <!-- Darker Rose Accent -->
      <corners android:radius="80dp"/>
    </shape>
  </item>

  <!-- Abstract Floral Curve (Accent 2) -->
  <item android:bottom="20dp">
    <shape android:shape="rectangle">
      <solid android:color="#FF99B5"/> <!-- Mid-tone Pink -->
      <corners android:radius="100dp"/>
    </shape>
  </item>

</layer-list>
