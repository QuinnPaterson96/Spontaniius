<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="ui.sign_up.SignUpActivity3"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/done3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="307dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="3dp"
        android:text="@string/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/include_phone"
        android:layout_width="191dp"
        android:layout_height="40dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="150dp"
        android:text="@string/include_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/include_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="469dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="102dp"
        android:text="@string/include_greeting"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/back_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="3dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/greeting_card"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="265dp"
        android:addStatesFromChildren="false"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214">


        <TextView
            android:id="@+id/hello_greeting"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="107dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="520dp"
            android:text="@string/my_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/enter_name"
            android:layout_width="231dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:text="@string/hello"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="80sp"
            android:layout_marginBottom="520dp"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/display_phone"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="70sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="520dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/special_greeting"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="50sp"
            android:layout_marginBottom="520dp" />

        <TextView
            android:id="@+id/display_greeting"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="50sp"
            android:layout_marginBottom="520dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/design_greeting"
        android:layout_width="450sp"
        android:layout_height="45sp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="210dp"
        android:background="@android:color/holo_blue_bright"
        android:text="@string/custom"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/color_spinner"
        android:layout_width="147dp"
        android:layout_height="27dp"
        android:layout_marginStart="258dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="189dp"
        android:text="@string/select"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>