<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:id="@+id/details"
    android:background="@color/quantum_orangeA700"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/titleDistanceSection"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="28dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="1dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="1dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView"
            android:text="Line 3"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptionTimeSection"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@id/titleDistanceSection"
        android:layout_marginLeft="50dp"

        android:weightSum="1">
        <TextView
            android:id="@+id/textView2"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:text="Line 2"
            android:textSize="13sp"
            android:width="1dp"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="1dp" />

        <ImageView

            android:id="@+id/directionButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="223dp"

            android:padding="2dp"
            app:srcCompat="@drawable/ic_baseline_directions_24"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/textView4"
            android:width="1dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="Line 4"
            android:textSize="15sp"
            android:layout_width="1dp" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>