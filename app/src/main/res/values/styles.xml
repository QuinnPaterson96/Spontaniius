<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item> <!-- FIXED -->
    </style>

    <style name="create_event_item_layout" parent=""> <!-- You can set a parent if needed -->
        <item name="android:layout_marginStart">@dimen/create_event_left_margin</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/create_event_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/create_event_left_margin</item>
        <item name="android:layout_marginBottom">@dimen/create_event_top_margin</item>
    </style>

    <style name="MaterialComponents.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar"> <!-- FIXED -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialComponents.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="CustomTheme" parent="Theme.MaterialComponents.Light">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="Widget.AppTheme.MyView" parent="Widget.MaterialComponents.CardView"> <!-- FIXED -->
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="NoPaddingButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>
